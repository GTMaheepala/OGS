	<!-- profile Update servlet -->
     <servlet>
     	<servlet-name>UpdateProfileServlet</servlet-name>
     	<servlet-class>UserPackage.UpdateProfileServlet</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>UpdateProfileServlet</servlet-name>
     	<url-pattern>/UpdateProfileServlet</url-pattern>
     </servlet-mapping>
     
     
     <!-- Account Delete servlet -->
     <servlet>
     	<servlet-name>AccountDeleteServlet</servlet-name>
     	<servlet-class>UserPackage.AccountDeleteServlet</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>AccountDeleteServlet</servlet-name>
     	<url-pattern>/AccountDeleteServlet</url-pattern>
     </servlet-mapping>
     
     
     <!-- Get All servlet -->
     <servlet>
     	<servlet-name>UserGetAllServlet</servlet-name>
     	<servlet-class>UserPackage.UserGetAllServlet</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>UserGetAllServlet</servlet-name>
     	<url-pattern>/UserGetAllServlet</url-pattern>
     </servlet-mapping>
     
     
     <!-- Admin package -->
     <servlet>
    	<servlet-name>UserGetAllDataServlet</servlet-name>
    	<servlet-class>UserPackage.UserGetAllDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>UserGetAllDataServlet</servlet-name>
	    <url-pattern>/GetUsers</url-pattern>
	</servlet-mapping>

	<servlet>
	    <servlet-name>UserUpdateServlet</servlet-name>
	    <servlet-class>UserPackage.UserUpdateServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>UserUpdateServlet</servlet-name>
	    <url-pattern>/UpdateUser</url-pattern>
	</servlet-mapping>


</web-app>